{

  "manifest_version": 2,
  "name": "Janitor",
  "version": "0.0.2",

  "description": "Clean up the web.",
  "homepage_url": "https://google.com",
  "icons": {
    "32": "icons/beasts-32.png",
    "48": "icons/beasts-48.png",
    "96": "icons/beasts-96.png"
  },

  "background": {
    "scripts": ["background.js"]
  },
  
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["<all_urls>"],
      "js": ["content_scripts/bundle.js"],
      "run_at": "document_end"
    }
  ],

  "permissions": [
    "contextMenus"
  ],
}